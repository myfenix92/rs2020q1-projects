{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },

  "parser": "babel-eslint",

  "extends": ["airbnb/base"],
  "rules": {
    "linebreak-style": [
      "error",
      "windows"
  ],
    "semi": "error",
    "quotes": ["error", "single", { "allowTemplateLiterals": true }],
    "no-console": "warn"
  }
}